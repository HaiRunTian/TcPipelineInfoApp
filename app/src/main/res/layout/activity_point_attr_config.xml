<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/DefaultTitleBarStyle">

        <LinearLayout
            android:id="@+id/linearReturn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvReturn"
                style="@style/TitleBarLeftIconStyle"
                android:background="@mipmap/ic_arrow_left_32"/>

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TitleBarTextStyle"
                android:layout_marginLeft="5dp"
                android:text="点属性配置"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvSubmit"
            style="@style/TitleBarRightIconStyle"
            android:text="@string/save"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="ID"/>

                <EditText
                    android:id="@+id/edtID"
                    style="@style/EdtStyle02_disable"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="@string/pipe_type"/>

                <EditText
                    android:id="@+id/edtPipeType"
                    style="@style/EdtStyle02"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="@string/appendant"/>

                <EditText
                    android:id="@+id/edtAppendant"
                    style="@style/EdtStyle02"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="@string/color"/>

                <EditText
                    android:id="@+id/edtColor"
                    style="@style/EdtStyle02"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="符号X方向放大的倍数"/>

                <EditText
                    android:id="@+id/edtScaleX"
                    style="@style/EdtStyle02"
                    android:inputType="numberDecimal"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="符号Y方向放大的倍数"/>

                <EditText
                    android:id="@+id/edtScaleY"
                    style="@style/EdtStyle02"
                    android:inputType="numberDecimal"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="符号旋转的角度"/>

                <EditText
                    android:id="@+id/edtAngle"
                    style="@style/EdtStyle02"
                    android:inputType="numberDecimal"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="符号图标ID"/>

                <EditText
                    android:id="@+id/edtSymbolID"
                    style="@style/EdtStyle02"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="从属的标准"/>

                <EditText
                    android:id="@+id/edtStandard"
                    style="@style/EdtStyle02"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="最小可见比例"/>

                <EditText
                    android:id="@+id/edtMinScaleVisible"
                    style="@style/EdtStyle02"
                    android:inputType="numberDecimal"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="最大可见比例"/>

                <EditText
                    android:id="@+id/edtMaxScaleVisble"
                    style="@style/EdtStyle02"
                    android:inputType="numberDecimal"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearCenterVertical">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="绘制符号的线宽"/>

                <EditText
                    android:id="@+id/edtLineWidth"
                    style="@style/EdtStyle02"
                    android:inputType="numberDecimal"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>