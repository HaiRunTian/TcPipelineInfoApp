<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="注册号"
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:hint="注册码"
        android:layout_toRightOf="@id/tv_1"
        android:id="@+id/tv_register_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/tv_1"
        android:text="注册码"
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/tv_1"
        android:hint="注册码"
        android:layout_toRightOf="@id/tv_2"
        android:id="@+id/tv_register_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/tv_2"
        android:text="电话号码"
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:inputType="number"
        android:layout_below="@+id/tv_2"
        android:hint="电话号码"
        android:layout_toRightOf="@id/tv_3"
        android:id="@+id/tv_register_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/tv_3"
        android:text="邮箱"
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:inputType="number"
        android:layout_below="@+id/tv_3"
        android:hint="邮箱"
        android:layout_toRightOf="@id/tv_4"
        android:id="@+id/tv_register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/tv_4"
        android:text="公司"
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:inputType="number"
        android:layout_below="@+id/tv_4"
        android:hint="公司"
        android:layout_toRightOf="@id/tv_5"
        android:id="@+id/tv_register_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@+id/tv_5"
        android:text="申请"
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
