<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6">

        <TextView
            android:id="@+id/tv_cel"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_6"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:text="@string/measure_point" />

        <View

            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_cel"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_15"
            android:alpha="0.5"
            android:background="@color/grey01" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:textSize="@dimen/sp_12"
            android:text="当天测量工作量：" />

        <TextView
            android:id="@+id/tvDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvDate"
            android:drawableRight="@drawable/selector_tv_right"
            android:gravity="end"
            android:textColor="@color/text1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tvDate2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_15"
            android:alpha="0.5"
            android:background="@color/grey01" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginLeft="@dimen/dp_20"
        android:gravity="center_vertical">

        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/tvPointCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管点: " />

        <TextView
            android:textSize="@dimen/sp_14"
            android:id="@+id/tvPointSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvPointCount"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text1" />

        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/tvGe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvPointSum"
            android:text=" 个" />

        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/tvPipeLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_toRightOf="@id/tvGe"
            android:text="管线: " />

        <TextView
            android:textSize="@dimen/sp_14"
            android:id="@+id/tvPipeSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvPipeLength"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text1" />

        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/tvM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvPipeSum"
            android:text=" 米" />

    </RelativeLayout>

    <TextView
        android:textSize="@dimen/sp_12"
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="总测量工作量:" />

    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCount"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_3"
        android:gravity="center_vertical">

        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/tvAllPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管点: " />

        <TextView
            android:textSize="@dimen/sp_14"
            android:id="@+id/tvPointSum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvAllPoint"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text1" />

        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/tvGe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvPointSum2"
            android:text=" 个" />

        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/tvAllPipeLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_toRightOf="@+id/tvGe2"
            android:text="管线: " />

        <TextView
            android:textSize="@dimen/sp_14"
            android:id="@+id/tvPipeSum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvAllPipeLength"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text1" />

        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/tvM2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvPipeSum2"
            android:text=" 米" />

        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/tvMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_toRightOf="@+id/tvM2"
            android:gravity="center_vertical"
            android:text="@string/unmeasure_point" />

        <TextView
            android:textSize="@dimen/sp_14"
            android:id="@+id/tvWaitCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvMeasure"
            android:gravity="center_vertical"
            android:text="10"
            android:textColor="@color/text1" />

        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/tvGe3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvWaitCheck"
            android:text=" 个" />

    </RelativeLayout>

    <RelativeLayout
        android:gravity="center"
        android:layout_below="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnHideMeasuredFlag"
            style="@style/ButtonStyle02_2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/hide_measured_point" />

        <Button
            android:layout_toRightOf="@+id/btnHideMeasuredFlag"
            android:id="@+id/btnWaitCheck"
            style="@style/ButtonStyle02_2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/hide_wait_point" />

    </RelativeLayout>



</RelativeLayout>