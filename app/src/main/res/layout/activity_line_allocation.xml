<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.app.pipelinesurvey.view.activity.linepoint.LineAllocationActivity">
    <RelativeLayout
        style="@style/DefaultTitleBarStyle">
        <LinearLayout
            android:id="@+id/standardReturn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tvReturn"
                android:layout_height="25dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="类型选择"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:drawableLeft="@mipmap/ic_arrow_left_32x54"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/big"
                android:gravity="center"
                android:text="管线配置"/>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                style="@style/LinearCenterVertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/point_name"
                        android:layout_margin="5dp"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="@string/line_setting_name"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/edtName"
                    style="@style/EdtStyle02"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LinearCenterVertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/color"
                        android:layout_margin="5dp"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="@string/point_setting_color"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/edColor"
                    style="@style/EdtStyle02"
                    android:focusable="false"
                    android:theme="@style/CustomEdittext02"
                    />
            </LinearLayout>
            <LinearLayout
            style="@style/LinearCenterVertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/id"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="符号ID:"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/edtSymbolID"
                style="@style/EdtStyle02"
                android:numeric="integer"
                android:theme="@style/CustomEdittext02"/>
        </LinearLayout>
            <LinearLayout
                style="@style/LinearCenterVertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/size"
                        android:layout_margin="5dp"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="@string/point_setting_lineWidt"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/edtLineWidth"
                    style="@style/EdtStyle02"
                    android:numeric="integer"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LinearCenterVertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/subordinate"
                        android:layout_margin="5dp"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="@string/point_setting_pipe_type"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/edtType"
                    style="@style/EdtStyle02"
                    android:focusable="false"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LinearCenterVertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/type"
                        android:layout_margin="5dp"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="@string/line_setting_typeCode"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/edtTypeCode"
                    style="@style/EdtStyle02"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LinearCenterVertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/city"
                        android:layout_margin="5dp"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="@string/point_setting_city"
                        />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtCity"
                    style="@style/EdtStyle02"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LinearCenterVertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/remak"
                        android:layout_margin="5dp"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="@string/line_setting_remark"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/edtLineRemark"
                    style="@style/EdtStyle02"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LinearCenterVertical"
                android:visibility="gone">

                <TextView
                    style="@style/TextViewStyle02"
                    android:text="@string/line_setting_LineTextColor"/>

                <EditText
                    android:id="@+id/edtLineTextColor"
                    style="@style/EdtStyle02"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LinearCenterVertical"
                android:visibility="gone"
                >
                <TextView
                    style="@style/TextViewStyle02"
                    android:text="@string/line_setting_PointTextColor"/>

                <EditText
                    android:id="@+id/edtPointTextColor"
                    style="@style/EdtStyle02"
                    android:theme="@style/CustomEdittext02"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvSubmit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="保存"
                android:layout_gravity="center"
                android:background="@drawable/symbolic_item"
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:visibility="visible"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
