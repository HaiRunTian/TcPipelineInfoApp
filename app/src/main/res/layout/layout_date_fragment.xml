<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar_project_basemap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">

        <TextView
            style="@style/TextViewStyle02_4"
            android:text="起始时间:" />

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableRight="@mipmap/icon_edt_right_32x"
            android:textColor="@color/green03"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextViewStyle02_4"
            android:text="终止时间:" />

        <TextView
            android:id="@+id/tvEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/icon_edt_right_32x"
            android:textColor="@color/green03"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/TextViewStyle02_4"
            android:text="道路名字:" />

        <Spinner
            android:id="@+id/spRoadName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_export_select"
            style="@style/fragment_btn_style_3"
            android:text="条件导出" />

        <Button
            android:id="@+id/btn_export_all"
            style="@style/fragment_btn_style_3"
            android:text="全部导出" />

        <Button
            android:id="@+id/btn_export_measure"
            style="@style/fragment_btn_style_3"
            android:text="导出测量"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
